<!-- views/index.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>BookHive - Your Digital Library</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <header>
    <div class="container">
      <div class="logo-section">
        <img src="/images/logo.jpg" alt="BookHive Logo" class="logo">
      </div>
      <nav>
        <% if (user) { %>
          <a href="/library">My Library</a>
          <!-- <a href="/pinned">Pinned Books</a> -->
          <a href="/explore">Explore</a>
          <a href="/upload">Upload</a>
          <!-- <a href="/my-requests">My Requests</a>
          <a href="/access-requests">Access Requests</a> -->
          <a href="/account">Account</a>
          <a href="/logout">Logout</a>
        <% } else { %>
          <a href="/login">Login</a>
          <a href="/signup">Sign Up</a>
        <% } %>
      </nav>
    </div>
  </header>
  
  <main class="container">
    <section class="hero">
      <h2>Your Personal Digital Reading Platform</h2>
      <p>Upload, organize, share, and read your digital content anytime, anywhere.</p>
      <div class="cta-buttons">
        <% if (!user) { %>
          <a href="/signup" class="btn btn-primary">Get Started</a>
          <a href="/login" class="btn btn-secondary">Login</a>
        <% } else { %>
          <a href="/library" class="btn btn-primary">Go to My Library</a>
          <a href="/explore" class="btn btn-secondary">Discover Books</a>
        <% } %>
      </div>
    </section>
    
    <section class="features">
      <div class="feature">
        <h3>PDF Support</h3>
        <p>Upload and read PDFs seamlessly.</p>
      </div>
      <div class="feature">
        <h3>Share Books</h3>
        <p>Share your books with friends or the public.</p>
      </div>
      <div class="feature">
        <h3>Built-in Reader</h3>
        <p>Read PDFs directly in your browser.</p>
      </div>
      <div class="feature">
        <h3>Pin Favorites</h3>
        <p>Keep your favorite books easily accessible.</p>
      </div>
    </section>
  </main>
  
  <footer>
    <div class="container">
      <p>&copy; 2025 BookHive. All rights reserved.</p>
    </div>
  </footer>

  <script src="/js/main.js"></script>
</body>
</html>

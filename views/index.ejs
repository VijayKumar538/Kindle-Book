<!-- views/index.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>MyLibrary - Your Digital Library</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <header>
    <div class="container">
      <h1>MyLibrary</h1>
      <nav>
        <% if (user) { %>
          <a href="/library">My Library</a>
          <a href="/upload">Upload Book</a>
          <a href="/logout">Logout</a>
        <% } else { %>
          <a href="/login">Login</a>
          <a href="/signup">Sign Up</a>
        <% } %>
      </nav>
    </div>
  </header>
  
  <main class="container">
    <section class="hero">
      <h2>Your Personal Digital Library</h2>
      <p>Upload, organize, and read your books anytime, anywhere.</p>
      <div class="cta-buttons">
        <% if (!user) { %>
          <a href="/signup" class="btn btn-primary">Get Started</a>
          <a href="/login" class="btn btn-secondary">Login</a>
        <% } else { %>
          <a href="/library" class="btn btn-primary">Go to My Library</a>
        <% } %>
      </div>
    </section>
    
    <section class="features">
      <div class="feature">
        <h3>Upload Your Collection</h3>
        <p>Easily upload and organize your books in one place.</p>
      </div>
      <div class="feature">
        <h3>Read Anywhere</h3>
        <p>Access your library from any device with an internet connection.</p>
      </div>
      <div class="feature">
        <h3>Secure Storage</h3>
        <p>Your books are safely stored in our database for you to access anytime.</p>
      </div>
    </section>
  </main>
  
  <footer>
    <div class="container">
      <p>&copy; 2025 MyLibrary. All rights reserved.</p>
    </div>
  </footer>
</body>
</html>